@{ 
    ViewData["Title"] = "Sign in";
}

<div style="text-align: center;">
    <h1>Sign in</h1>
    <br />
    <button onclick="window.location.href = '/SignIn/Hosting'">Hosting sign in</button>
    <br /><br />
    <button onclick="window.location.href = '/SignIn/Player'">Player sign in</button>
    <h5 id="sign-out-message" style="visibility: collapse;">Signed out successfully</h5>

    @section Scripts {
        @if (ViewData["SignOut"].ToString() == "true")
        {
            <script>
                firebase.auth().signOut().then(function () {
                    document.getElementById("sign-out-message").style.visibility = "visible"
                    document.getElementById("sign-in-out-a").innerHTML = "Sign in"
                    document.getElementById("sign-in-out-a").href = "/SignIn"
                }).catch(function () {
                    document.getElementById("sign-out-message").style.visibility = "visible"
                    document.getElementById("sign-out-message").innerHTML = "Sorry, something went wrong signing you out. That's all we know."
                })
            </script>
        }
    }
</div>
